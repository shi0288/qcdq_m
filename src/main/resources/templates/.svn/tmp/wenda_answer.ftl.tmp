                $(".mask_area").fadeOut();
                $(".right_module_province").animate({right: "-100%"}, 500);
                $(".right_module_city").animate({right: "-100%"}, 500);
            } else {
                var province_id = $(this).attr("tagVal");
                var province_name = $(this).children('span').html();
                $.ajax({
                    type: "POST",
                    url: "./getCityList?timestamp=" + new Date().getTime(),
